<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="dosham.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:dosham.Pages"
    Shell.FlyoutBehavior="Locked"
    Shell.NavBarIsVisible="False"
    Title="dosham">

    <ShellContent
        Title="Поиск"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="Main">
    </ShellContent>

    <ShellContent
        Title="Указатель"
        ContentTemplate="{DataTemplate pages:IndexPage}"
        Route="Index">
    </ShellContent>

    <ShellContent
        Title="Алфавит"
        ContentTemplate="{DataTemplate pages:AlphabetPage}"
        Route="Alphabet">
    </ShellContent>
    
    <ShellContent
        Title="Вход"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="Login">
    </ShellContent>
    
    <ShellContent
        Title="Регистрация"
        ContentTemplate="{DataTemplate pages:RegistrationPage}"
        Route="Register">
    </ShellContent>
    
</Shell>
