@inherits NewEntryViewModel
@page "/newentry"

<h3>New Entry</h3>
<EditForm Model="@EntryDto" OnValidSubmit="HandleSubmit">
    <div class="form-group">
        <label for="entryType">Entry Type</label>
        <select class="form-control" id="entryType" @bind="@EntryDto.EntryType">
            <option value="@EntryType.Word">Word</option>
            <option value="@EntryType.Phrase">Phrase</option>
            <option value="@EntryType.Text">Text</option>
        </select>
    </div>

    @if (EntryDto is WordDto wordDto)
    {
        <div class="form-group">
            <label for="wordId">Word ID</label>
            <input class="form-control" id="wordId" @bind="@wordDto.WordId" />
        </div>
        <!-- Other WordDto specific fields -->
    }
    else if (EntryDto is PhraseDto phraseDto)
    {
        <div class="form-group">
            <label for="phraseId">Phrase ID</label>
            <input class="form-control" id="phraseId" @bind="@phraseDto.PhraseId" />
        </div>
        <!-- Other PhraseDto specific fields -->
    }
    else if (EntryDto is TextDto textDto)
    {
        <div class="form-group">
            <label for="textId">Text ID</label>
            <input class="form-control" id="textId" @bind="@textDto.TextId" />
        </div>
        <!-- Other TextDto specific fields -->
    }

    <div class="form-group">
        <label for="rate">Rate</label>
        <input class="form-control" id="rate" type="number" @bind="@EntryDto.Rate" />
    </div>

    <!-- Common fields for all DTOs -->
    <div class="form-group">
        <label for="content">Content</label>
        <input class="form-control" id="content" @bind="@EntryDto.Content" />
    </div>
    <!-- Other common fields for all DTOs -->

    <button type="submit" class="btn btn-primary">Save</button>
</EditForm>
