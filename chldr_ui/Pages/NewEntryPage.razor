@inherits NewEntryViewModel
@page "/newentry"

<h3>New Entry</h3>

<div class="form-group">
    <label for="entryType">Entry Type</label>
    <select class="form-control" id="entryType">
        <option value="@(EntryType.Word)">Word</option>
        <option value="@(EntryType.Phrase)">Phrase</option>
        <option value="@(EntryType.Text)">Text</option>
    </select>
</div>

@switch (SelectedEntryType)
{
    case EntryType.Text:
        break;
    case EntryType.Word:
        break;
    case EntryType.Phrase:
        break;
    default:
        break;
}

<div class="form-group">
    <label for="rate">Rate</label>
    <input class="form-control" id="rate" type="number" @bind="@EntryDto.Rate" />
</div>

<!-- Common fields for all DTOs -->
<div class="form-group">
    <label for="content">Content</label>
    <input class="form-control" id="content" @bind="@EntryDto.Content" />
</div>
<!-- Other common fields for all DTOs -->

<button type="submit" class="btn btn-primary">Save</button>

