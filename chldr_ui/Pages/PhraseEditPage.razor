@page "/phrase/edit/{PhraseId}";

@inject NavigationManager NavManager;
@inherits PhraseEditViewModel;

<h3>EntryEditPage</h3>
@if (Phrase != null)
{
    <form class="col-6">
        <div class="form-outline mb-4">
            <input type="text" class="form-control" placeholder="@Localizer["Phrase_text"]" @bind="Phrase.Content" />
        </div>

        <div class="form-outline mb-4">
            <input type="text" class="form-control" placeholder="@Localizer["Notes"]" @bind="Phrase.Notes" />
        </div>

        @foreach (var translation in Phrase.Translations)
        {
            <TranslationEditView WordId="@PhraseId" TranslationId="@translation.TranslationId.ToString()"></TranslationEditView>
        }

    </form>
}

<button class="btn btn-light" @onclick="@(()=>NavManager.NavigateTo("/"))">Cancel</button>
<button class="btn btn-primary" @onclick="@Submit">Save</button>
<button class="btn btn-primary">Save and add another</button>