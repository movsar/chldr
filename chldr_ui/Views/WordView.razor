@inherits WordViewModel;

<div class="chldr_entry">
    <div class="card card-body">

        <div class="chldr_entry_header card-title">
            @Header
            @*<span class="oi oi-volume-high" @onclick="ViewModel.ListenToPronunciation"></span>*@
        </div>

        @if (!String.IsNullOrWhiteSpace(Subheader))
        {
            <div class="chldr_entry_sub-header">
                @Subheader
            </div>
        }

        @if (!String.IsNullOrWhiteSpace(@Word?.Notes))
        {
            <div class="chldr_translation_notes">
                (@Word.Notes)
            </div>
        }

        @if (!String.IsNullOrWhiteSpace(@Source))
        {
            <div class="chldr_entry_source">
                @Localizer["Source"]: @Source
            </div>
        }

        <div class="chldr_entry_translations mt-2">
            @foreach (var translation in @Translations)
            {
                <TranslationView Translation="@translation"></TranslationView>
            }
        </div>

        @if (UserStore?.CurrentUserInfo != null)
        {
            <div class="chldr_entry_actions">
                <i class="fa fa-language" @onclick="NewTranslation"></i>
                <i class="fa fa-share" @onclick="Share"></i>
                <i class="fa fa-flag" @onclick="Flag"></i>
                <i class="fa fa-star" @onclick="AddToFavorites"></i>

                @if (UserStore?.CurrentUserInfo?.CanEditEntry(Entry!) == true)
                {
                    <a href="/word/edit/@Word?.WordId"><i class="oi oi-pencil"></i></a>
                }
            </div>
        }
    </div>
</div>