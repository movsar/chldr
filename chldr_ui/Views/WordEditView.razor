@inherits EditWordViewModel;

<form class="col-8">
    <div class="form-outline mb-2">
        <input type="text" class="form-control" placeholder="@Localizer["EnterWord"]" @bind="EntryDto.Content" />
    </div>

    <div class="row form-outline form-group mt-2">
        <div class="col-8">
            <div class="form-group">
                <select @bind="EntryDto.EntrySubtype" class="form-select">
                    @foreach (WordType WordType in (WordType[])Enum.GetValues(typeof(WordType)))
                    {
                        <option value="@((int)WordType)" selected="@((int)WordType == EntryDto.EntrySubtype)">@Localizer[$"Word:{WordType.ToString()}"]</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-4">
            <div class="form-group">
                <button class="btn btn-secondary form-control" type="button" data-bs-toggle="collapse" data-bs-target=".word-details" aria-expanded="false">
                    @Localizer["Word:Characteristics"]
                </button>
            </div>
        </div>
        <div class="collapse word-details mt-2">
            <div class="card card-body">

                @if (EntryDto.EntrySubtype == (int)WordType.Verb)
                {
                    <b>@Localizer["Tense"]:</b>
                    <div class="form-outline mb-2">
                        <select @bind="VerbDetails.Tense"
                                class="form-select"
                                title="@Localizer["Word:Tense"]">

                            @foreach (VerbTense tense in (VerbTense[])Enum.GetValues(typeof(VerbTense)))
                            {
                                <option value="@tense" class="form-control">@Localizer[$"Word:Tense{tense.ToString()}"]</option>
                            }
                        </select>
                    </div>

                    <b>@Localizer["Transitiveness"]:</b>
                    <div class="form-outline mb-2">
                        <select @bind="VerbDetails.Transitiveness"
                                class="form-select"
                                title="@Localizer["Word:Transitiveness"]">

                            @foreach (Transitiveness transitiveness in (Transitiveness[])Enum.GetValues(typeof(Transitiveness)))
                            {
                                <option value="@transitiveness" class="form-control">@Localizer[$"Word:Transitiveness:{transitiveness}"]</option>
                            }
                        </select>
                    </div>

                    <b>@Localizer["NumericalType"]:</b>
                    <div class="form-outline mb-2">
                        <select @bind="VerbDetails.NumericalType"
                                class="form-select"
                                title="@Localizer["Word:NumericalType"]">

                            @foreach (NumericalType numericalType in (NumericalType[])Enum.GetValues(typeof(NumericalType)))
                            {
                                <option value="@numericalType" class="form-control">@Localizer[$"Word:NumericalType:{numericalType}"]</option>
                            }
                        </select>
                    </div>

                    <b>@Localizer["Conjugation"]:</b>
                    <div class="form-outline mb-2">
                        <select @bind="VerbDetails.Conjugation"
                                class="form-select"
                                title="@Localizer["Word:Conjugation"]">

                            @foreach (VerbConjugation conjugation in (VerbConjugation[])Enum.GetValues(typeof(VerbConjugation)))
                            {
                                <option value="@conjugation" class="form-control">@Localizer[$"Word:Conjugation:{conjugation}"]</option>
                            }
                        </select>
                    </div>

                    <b>@Localizer["Mood"]:</b>
                    <div class="form-outline mb-2">
                        <select @bind="VerbDetails.Mood"
                                class="form-select"
                                title="@Localizer["Word:Mood"]">

                            @foreach (VerbMood mood in (VerbMood[])Enum.GetValues(typeof(VerbMood)))
                            {
                                <option value="@mood" class="form-control">@Localizer[$"Word:Mood:{mood}"]</option>
                            }
                        </select>
                    </div>

                    <b>@Localizer["Grammatical_class"]:</b>
                    <div class="form-outline mb-2">
                        <select @bind="VerbDetails.Class"
                                class="form-select"
                                title="@Localizer["Word:Class"]">

                            <option value="0" class="form-control">@Localizer["Word:Undefined"]</option>
                            <option value="1" class="form-control">@Localizer["Class:1_v_b"]</option>
                            <option value="2" class="form-control">@Localizer["Class:2_y_b"]</option>
                            <option value="3" class="form-control">@Localizer["Class:3_y_y"]</option>
                            <option value="4" class="form-control">@Localizer["Class:4_d_d"]</option>
                            <option value="5" class="form-control">@Localizer["Class:5_b_b"]</option>
                            <option value="6" class="form-control">@Localizer["Class:6_b_d"]</option>
                        </select>
                    </div>
                }


                @if (EntryDto.EntrySubtype == (int)WordType.Noun)
                {
                    <div class="form-outline mb-2">
                        <select @bind="@NounDetails.Class" class="form-select" title="@Localizer["Word:Class"]">
                            <option value="1" class="form-control">@Localizer["Class:1_v_b"]</option>
                            <option value="2" class="form-control">@Localizer["Class:2_y_b"]</option>
                            <option value="3" class="form-control">@Localizer["Class:3_y_y"]</option>
                            <option value="4" class="form-control">@Localizer["Class:4_d_d"]</option>
                            <option value="5" class="form-control">@Localizer["Class:5_b_b"]</option>
                            <option value="6" class="form-control">@Localizer["Class:6_b_d"]</option>
                        </select>
                    </div>
                }

            </div>
        </div>
    </div>

    <h5 class="mt-2">
        @Localizer["Translations"]:
        <button class="btn btn-success" type="button" @onclick="@(() => NewTranslation())">@Localizer["Add"]</button>
    </h5>

    <div class="mt-2">
        @foreach (var translation in EntryDto.Translations)
        {
            <div class="mb-4">
                <TranslationEditView Translation="@translation" OnDelete="@(async (translationId) => await DeleteTranslation(translationId))"></TranslationEditView>
                @*<hr/>*@
            </div>
        }
    </div>

    <FormErrorsView ErrorMessages="@ErrorMessages" />
</form>



<div class="mt-3 float-end">
    <button class="btn btn-light" @onclick="@(()=>NavigationManager.NavigateTo("/"))">@Localizer["Cancel"]</button>
    <button class="btn btn-primary" @onclick="@ValidateAndSubmitAsync">@Localizer["Save"]</button>
    @*<button class="btn btn-primary">Save and add another</button>*@
</div>

