@inherits TranslationEditViewModel

<p>
    @Localizer["Choose_language"]
</p>

<select @bind="@LanguageCode" class="form-select" title="@Localizer["Grammatical_class"]">
    @foreach (var language in ContentStore.AllLanguages)
    {
        <option value="@language.LanguageId" class="form-control">@language.Code</option>
    }
</select>

<input type="text" class="form-control" autocomplete="off" disabled="@FormDisabled"
       placeholder="@Localizer["Enter_translation_text"]" required @bind="Content" />

<input type="text" class="form-control" autocomplete="off" disabled="@FormDisabled"
       placeholder="@Localizer["Enter_translation_notes"]" @bind="Notes" />
