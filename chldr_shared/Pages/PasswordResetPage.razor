@page "/password-reset"
@inject IStringLocalizer<AppLocalizations> Localizer;
@inherits ResetPasswordPageViewModel;

<h3>@Localizer["Password_reset"]</h3>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-4 offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">@Localizer["Forgot_password"]?</h2>
                        <p>@Localizer["You_can_reset_your_password_here"]</p>
                        <div class="panel-body">
                            <form id="register-form" role="form" autocomplete="off" class="form" method="post">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        <input id="email" name="email" placeholder="@Localizer["Email_address"]" class="form-control" type="email">
                                    </div>
                                </div>

                                <div class="form-group mt-3">
                                    <input name="recover-submit" class="btn btn-lg btn-primary btn-block"
                                           value="@Localizer["Reset_password"]" @onclick="@SendPasswordResetRequest">
                                </div>

                                <input type="hidden" class="hide" name="token" id="token" value="">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

