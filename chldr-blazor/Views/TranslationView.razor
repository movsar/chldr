@using chldr_blazor.ViewModels;

<div class="chldr_translation card-subtitle">
    <span class="chldr_translation_language-code">
        @ViewModel.LanguageCode
    </span>

    <span class="chldr_translation_content">
        @ViewModel.Content
    </span>

    @if (!String.IsNullOrWhiteSpace(@ViewModel.Notes)){
        <div class="chldr_translation_notes">
            (@ViewModel.Notes)
        </div>
    }

</div>

@code {
    [Parameter]
    public TranslationViewModel ViewModel { get; set; }
}
